@model PianoRiseManagement.Models.Cancion

@{
    ViewData["Title"] = "Detalles de canción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Canciones/Details.css" />
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header card-header-custom">
            <h4 class="title-icon mb-0">
                <i class="bi bi-music-note-beamed"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body bg-white">
            <dl class="row mb-0">
                <dt class="col-sm-3">Título</dt>
                <dd class="col-sm-9">@Model.Titulo</dd>

                <dt class="col-sm-3">Nivel</dt>
                <dd class="col-sm-9">@Model.Nivel</dd>

                <dt class="col-sm-3">Compositor</dt>
                <dd class="col-sm-9">@Model.Compositor</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@((Model.Estado ? "Activa" : "Inactiva"))</dd>

                <dt class="col-sm-3">Notas</dt>
                <dd class="col-sm-9">
                    @if (Model.Notas?.Any() == true)
                    {
                        foreach (var nota in Model.Notas)
                        {
                            <span class="chip">@nota</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Sin notas registradas</span>
                    }
                </dd>

                <dt class="col-sm-3">Creado en</dt>
                <dd class="col-sm-9">@Model.CreadoEn.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
