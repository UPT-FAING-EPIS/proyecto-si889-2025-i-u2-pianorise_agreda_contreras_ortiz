@model PianoRiseManagement.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Roles/Delete.css" />
}

<div class="container py-4">
    <div class="card shadow-sm delete-card mx-auto">
        <div class="card-header card-header-custom d-flex align-items-center gap-2">
            <i class="bi bi-trash-fill fs-4"></i>
            <h4 class="mb-0">Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning text-center">
                ¿Estás seguro de que deseas eliminar este rol?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
