@model PianoRiseManagement.Models.Rol

@{
    ViewData["Title"] = "Detalle del Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Roles/Details.css" />
}

<div class="container py-4">
    <div class="card shadow-sm details-card mx-auto">
        <div class="card-header card-header-custom d-flex align-items-center gap-2">
            <i class="bi bi-info-circle-fill fs-4"></i>
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
            </dl>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-fill"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
