@model PianoRiseManagement.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Auth/Login.css" />
}

<div class="login-card">
    <div class="card-header-custom">
        <i class="bi bi-box-arrow-in-right"></i> @ViewData["Title"]
    </div>
    <div class="card-body mt-3">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope-fill text-success"></i></span>
                    <input asp-for="Correo" class="form-control" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill text-success"></i></span>
                    <input asp-for="Contrasena" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-green-glow">
                    <i class="bi bi-door-open-fill"></i> Ingresar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
