@{
    ViewData["Title"] = "Bienvenido a PianoRise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Home/Index.css" />
}

<div class="home-card">
    <div class="home-icon">
        <i class="bi bi-music-note-beamed"></i>
    </div>
    <h1 class="home-title">¡Bienvenido a PianoRise!</h1>
