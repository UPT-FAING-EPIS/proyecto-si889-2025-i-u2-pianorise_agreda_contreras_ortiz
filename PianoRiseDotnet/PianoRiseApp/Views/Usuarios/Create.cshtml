@model PianoRiseManagement.Models.Usuario

@{
    ViewData["Title"] = "Registrar Docente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/Usuarios/Create.css" rel="stylesheet" />
}

<div class="container py-4">
    <div class="card form-card mx-auto">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">
                <i class="bi bi-person-plus-fill"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body bg-white">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="NombreCompleto" class="form-label">Nombre completo</label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CorreoElectronico" class="form-label">Correo electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContrasenaHash" class="form-label">Contraseña</label>
                    <input asp-for="ContrasenaHash" type="password" class="form-control" />
                    <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirmar contraseña</label>
                    <input name="VerificarContrasena" type="password" class="form-control" />
                    <span class="text-danger">@ViewData["ErrorContrasena"]</span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="EstaActivo" class="form-check-input" />
                    <label asp-for="EstaActivo" class="form-check-label">Activo</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Registrar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
