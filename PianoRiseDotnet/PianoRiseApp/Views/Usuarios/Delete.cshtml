@model PianoRiseManagement.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Docente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/Usuarios/Delete.css" rel="stylesheet" />
}

<div class="container py-4">
    <div class="card delete-card mx-auto">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">
                <i class="bi bi-person-x-fill"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body bg-white">
            <h5 class="mb-4">¿Estás seguro que deseas eliminar a <strong>@Model.NombreCompleto</strong>?</h5>

            <dl class="row">
                <dt class="col-sm-4">Correo electrónico</dt>
                <dd class="col-sm-8">@Model.CorreoElectronico</dd>

                <dt class="col-sm-4">Activo</dt>
                <dd class="col-sm-8">
                    @if (Model.EstaActivo)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
