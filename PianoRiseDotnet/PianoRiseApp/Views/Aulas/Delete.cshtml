@model PianoRiseManagement.Models.Aula

@{
    ViewData["Title"] = "Eliminar Aula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Aulas/Delete.css" />
}

<div class="container py-4">
    <div class="card shadow-sm border-danger form-card mx-auto">
        <div class="card-header card-header-custom d-flex align-items-center gap-2">
            <i class="bi bi-trash-fill fs-5"></i>
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-3">¿Estás seguro que deseas eliminar esta aula?</h5>

            <dl class="row">
                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4">Grado</dt>
                <dd class="col-sm-8">@Model.Grado</dd>

                <dt class="col-sm-4">Sección</dt>
                <dd class="col-sm-8">@Model.Seccion</dd>

                <dt class="col-sm-4">Año</dt>
                <dd class="col-sm-8">@Model.Anio</dd>

                <dt class="col-sm-4">Código</dt>
                <dd class="col-sm-8">@Model.Codigo</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@(Model.Estado ? "Activa" : "Inactiva")</dd>

                <dt class="col-sm-4">Docente</dt>
                <dd class="col-sm-8">@Model.Docente?.NombreCompleto</dd>

                <dt class="col-sm-4">Creado en</dt>
                <dd class="col-sm-8">@Model.CreadoEn.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
